#!/bin/sh

if [ "$3" = "sta_only" ]; then
	# sta_only added for Matter
	options="CONFIG_STA_MAX=1 CONFIG_VIRT_DEV_MAX=1"
	make CONFIG_CHIP_NAME=BL602 CONFIG_LINK_ROM=1 CONFIG_BLE_TP_SERVER=1 CONFIG_BLECONTROLLER_LIB=all $options -j
else
	make CONFIG_CHIP_NAME=BL602 CONFIG_LINK_ROM=1 CONFIG_BLE_TP_SERVER=1 CONFIG_BLECONTROLLER_LIB=all -j
fi

exit $?
